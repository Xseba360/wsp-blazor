@page "/calculator"
@using System.Runtime.InteropServices

<h1>Bardzo prosty kalkulator</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4 text-right">
                <p>Pierwsza liczba</p>
            </div>
            <div class="col-md-8">
                <input @bind="@Calc.Val1" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <p>Druga liczba</p>
            </div>
            <div class="col-md-8">
                <input @bind="@Calc.Val2" />
            </div>
        </div>
        <br/>
        
        <div class="row">
            <div class="col-md-4 text-right">
                <p>Wynik</p>
            </div>
            <div class="col-md-8">
                <input readonly @bind="@Calc.Result" />
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <button @onclick="Calc.Add" class="btn btn-success btn-lg btn-block">+</button>
        </div>
        <div class="row">
            <button @onclick="Calc.Subtract" class="btn btn-danger btn-lg btn-block">-</button>
        </div>
        <div class="row">
            <button @onclick="Calc.Divide" class="btn btn-warning btn-lg btn-block">÷</button>
        </div>
        <div class="row">
            <button @onclick="Calc.Multiply" class="btn btn-info btn-lg btn-block">×</button>
        </div>
    </div>
</div>
@code {

    
    class Calc
    {
        public static string Val1;
        public static string Val2;
        public static string Result;
        
        public static void Add()
        {
            
            Result = (Convert.ToDouble(Val1) + Convert.ToDouble(Val2)).ToString();
        }
        public static void Subtract()
        {
            Result = (Convert.ToDouble(Val1) - Convert.ToDouble(Val2)).ToString();

        }
        public static void Divide()
        {

            if (Convert.ToDouble(Val2) != 0)
            {
                Result = (Convert.ToDouble(Val1) / Convert.ToDouble(Val2)).ToString();
            }
            else
            {
                Result = "Cannot Divide by Zero";
            }
        }
        public static void Multiply()
        {
            Result = (Convert.ToDouble(Val1) * Convert.ToDouble(Val2)).ToString();

        }
    }
}